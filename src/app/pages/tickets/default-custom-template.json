{
  "template": "<html>\n<head>\n    <meta http-equiv=\"Content-Type\" content=\"text/html; charset=utf-8\"/>\n\n    <style>\n        @page {\n            margin: 0 !important;\n            padding: 0 !important;\n        }\n\n        body {\n            margin: 0 !important;\n            padding: 0 !important;\n        }\n\n        div {\n            background: blue;\n            display: inline;\n        }\n\n        #ticket-wrapper {\n            font-family: Arial, Helvetica, Sans-Serif;\n            background-color: #fff;\n            position: relative;\n            overflow: hidden;\n            width: {{styling.size.width}}mm;\n            height: {{styling.size.length}}mm;\n        }\n\n        #ticket-image {\n            position: absolute;\n            top: 0;\n            left: 0;\n            width: {{styling.size.width}}mm;\n            height: {{styling.size.length}}mm;\n\n        }\n\n        #qr-code {\n            position: absolute;\n            width: {{styling.qrCode.size}}mm;\n            height: {{styling.qrCode.size0}}mm;\n            top: {{styling.qrCode.top}}mm;\n            left: {{styling.qrCode.left}}mm;\n            margin: 0 !important;\n            padding: 0 !important;\n        }\n\n        #ticket-text {\n            position: absolute;\n            font-size: {{styling.text.size}}mm;\n            color: {{styling.text.color}};\n            top: {{styling.text.top}}mm;\n            left: {{styling.text.left}}mm;\n        }\n    </style>\n</head>\n<body>\n<div id=\"ticket-wrapper\">\n    <img src=\"{{background}}\" id=\"ticket-image\"/>\n\n    {% if qr_code_64 %}\n        <img id=\"qr-code\" src=\"data:image/png;base64, {{ qr_code_64 }}\"/>\n    {% endif %}\n    <p id=\"ticket-text\">{{ text }}</p>\n</div>\n</body>\n</html>"
}
